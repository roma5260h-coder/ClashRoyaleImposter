# Telegram Bot Token
BOT_TOKEN=123456789:ABCdefGHIjklmNOPqrsTUVwxyZ

# Public HTTPS URL of the Mini App (from ngrok/cloudflared/etc.)
WEBAPP_URL=https://your-domain.tld

# Allowed origins for webapp -> backend requests (comma-separated)
WEBAPP_ORIGINS=https://your-domain.tld,http://localhost:5173

# DEV ONLY: skip initData signature verification
INIT_DATA_BYPASS=0

# Start Telegram long polling inside this container (set 1 only if this is the only bot instance)
RUN_BOT_POLLING=0

# DEV ONLY: enable hidden bot tools in online lobby (backend guard)
APP_ENV=production
DEV_TOOLS_ENABLED=0
DEV_ADMIN_IDS=123456789
DEV_ADMIN_USERNAMES=gerafen
